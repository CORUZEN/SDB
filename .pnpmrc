# Configuração PNPM para SDB
auto-install-peers=true

# Configuração para build scripts
enable-pre-post-scripts=true
prefer-offline=false

# Permitir scripts específicos (aprovados automaticamente)
# unrs-resolver é seguro - dependência indireta do Next.js/Firebase  
scripts-prepend-node-path=auto

# Configuração de segurança - aceitar scripts de dependências conhecidas
unsafe-perm=true