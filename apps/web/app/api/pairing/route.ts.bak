import { NextRequest, NextResponse } from 'next/server';
import postgres from 'postgres';

// POST endpoint para valida√ß√£o de pairing code
export async function POST(request: NextRequest) {
  try {
    console.log('üîç Starting pairing code validation...');
    
    const { pairing_code } = await request.json();
    
    if (!pairing_code) {
      console.log('‚ùå Missing pairing code');
      return NextResponse.json(
        { success: false, error: 'C√≥digo de pareamento √© obrigat√≥rio' },
        { status: 400 }
      );
    }

    console.log('üîê Validating pairing code:', pairing_code);

    const sql = postgres(process.env.DATABASE_URL!, { ssl: 'require' });

    // Buscar dispositivo pelo pairing_code no metadata
    const result = await sql`
      SELECT id, name, device_identifier, status, organization_id, metadata, created_at
      FROM devices 
      WHERE metadata->>'pairing_code' = ${pairing_code}
      AND status = 'inactive'
      AND created_at > NOW() - INTERVAL '24 hours'
    `;

    await sql.end();

    if (result.length === 0) {
      console.log('‚ùå Pairing code not found or expired');
      return NextResponse.json(
        { success: false, error: 'C√≥digo de pareamento inv√°lido ou expirado' },
        { status: 404 }
      );
    }

    const device = result[0];
    console.log('‚úÖ Device found for pairing code:', device.id);

    return NextResponse.json({
      success: true,
      data: {
        device_id: device.id,
        name: device.name,
        device_identifier: device.device_identifier,
        status: device.status,
        organization_id: device.organization_id,
        pairing_code: pairing_code,
        created_at: device.created_at,
        message: 'C√≥digo v√°lido! Dispositivo encontrado e pronto para aprova√ß√£o.'
      }
    });

  } catch (error: any) {
    console.error('‚ùå Error validating pairing code:', error);
    return NextResponse.json(
      { success: false, error: 'Erro interno do servidor', details: error.message },
      { status: 500 }
    );
  }
}

// GET endpoint para verificar se um dispositivo foi aprovado
export async function GET(request: NextRequest) {
  try {
    const url = new URL(request.url);
    const device_id = url.searchParams.get('device_id');
    
    if (!device_id) {
      return NextResponse.json(
        { success: false, error: 'Device ID √© obrigat√≥rio' },
        { status: 400 }
      );
    }

    const sql = postgres(process.env.DATABASE_URL!, { ssl: 'require' });

    const result = await sql`
      SELECT id, name, status, last_heartbeat
      FROM devices 
      WHERE id = ${device_id}
    `;

    await sql.end();

    if (result.length === 0) {
      return NextResponse.json(
        { success: false, error: 'Dispositivo n√£o encontrado' },
        { status: 404 }
      );
    }

    const device = result[0];
    const isApproved = device.status === 'online' || device.status === 'offline';

    return NextResponse.json({
      success: true,
      data: {
        device_id: device.id,
        name: device.name,
        status: device.status,
        approved: isApproved,
        last_heartbeat: device.last_heartbeat
      }
    });

  } catch (error: any) {
    console.error('‚ùå Error checking device approval:', error);
    return NextResponse.json(
      { success: false, error: 'Erro interno do servidor' },
      { status: 500 }
    );
  }
}